# ========================================
# BID-KILLER ENGINE - Variables d'environnement
# Copiez ce fichier en .env et remplissez vos valeurs
# ========================================

# Application
APP_NAME=Bid-Killer Engine
DEBUG=False

# Database PostgreSQL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://bidkiller:votre_mot_de_passe@localhost:5432/bidkiller_db

# Security (JWT)
# IMPORTANT: Générez une clé secrète unique en production
# Commande: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGEZ_CETTE_CLE_EN_PRODUCTION_TRES_IMPORTANT
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Anthropic API (Claude)
# Obtenez votre clé sur: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-VOTRE_CLE_ICI
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4000

# Stripe (Paiements)
# Dashboard: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_VOTRE_CLE_STRIPE_TEST
STRIPE_WEBHOOK_SECRET=whsec_VOTRE_WEBHOOK_SECRET

# Price IDs Stripe (créez vos produits sur Stripe Dashboard)
STRIPE_STARTER_PRICE_ID=price_STARTER_ID
STRIPE_PRO_PRICE_ID=price_PRO_ID
STRIPE_ENTERPRISE_PRICE_ID=price_ENTERPRISE_ID

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600  # 100 MB en bytes

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Email (optionnel - pour notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre.email@gmail.com
SMTP_PASSWORD=votre_mot_de_passe_application

# CORS (origines autorisées)
# Séparez par des virgules en production
CORS_ORIGINS=http://localhost:3000,https://bid-killer.fr
